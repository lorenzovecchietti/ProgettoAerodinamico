FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

#include "../data"

internalField   uniform ($airVelocity 0 0);

boundaryField
{
    inlet
    {
        type            waveVelocity;
        waveDictName    waveDict;
        value           uniform ($airVelocity 0 0);
    }
    outlet
    {
        type            waveAbsorption2DVelocity;
        uCurrent        ($seaVelocity 0. 0.);
        value           uniform (1 0 0);
    }
    bottom
    {
        type            zeroGradient;
        value           uniform (0 0 0);
    }
    atmosphere
    {
        type            pressureInletOutletVelocity;
        value           uniform ($airVelocity 0 0);
    }
    frontAndBack
    {
        type            empty;
    }
}


// ************************************************************************* //
