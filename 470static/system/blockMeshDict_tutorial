FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

xmin	-10;
xmax	15;
xcells	25;

ymin	-10;
ymax	10;
ycells	20;



vertices
(
    ($xmin $ymin -16) //0
    ($xmax $ymin -16)
    ($xmax $ymax -16)
    ($xmin $ymax -16)

    ($xmin $ymin -1) //4
    ($xmax $ymin -1)
    ($xmax $ymax -1)
    ($xmin $ymax -1) //7

    ($xmin $ymin -0.15) //8
    ($xmax $ymin -0.15)
    ($xmax $ymax -0.15)
    ($xmin $ymax -0.15) //11

    ($xmin $ymin 0)//12
    ($xmax $ymin 0)
    ($xmax $ymax 0)
    ($xmin $ymax 0) //15

    ($xmin $ymin 0.15)//16
    ($xmax $ymin 0.15)
    ($xmax $ymax 0.15)
    ($xmin $ymax 0.15)//19

    ($xmin $ymin 1.6)//20
    ($xmax $ymin 1.6)
    ($xmax $ymax 1.6)
    ($xmin $ymax 1.6)//23

    ($xmin $ymin 4)//24
    ($xmax $ymin 4)
    ($xmax $ymax 4)
    ($xmin $ymax 4)//27
);

blocks
(
    // acqua
    hex (0 1 2 3 4 5 6 7) ($xcells $ycells 50) simpleGrading (1 1 0.05)
    hex (4 5 6 7 8 9 10 11) ($xcells $ycells 40) simpleGrading (1 1 1)
    
    // attorno al pelo libero
    hex (8 9 10 11 12 13 14 15) ($xcells $ycells 10) simpleGrading (1 1 1)
    hex (12 13 14 15 16 17 18 19) ($xcells $ycells 10) simpleGrading (1 1 1)
    
    // aria
    hex (16 17 18 19 20 21 22 23) ($xcells $ycells 70) simpleGrading (1 1 1)
    hex (20 21 22 23 24 25 26 27) ($xcells $ycells 20) simpleGrading (1 1 5)
);

edges
(
);

boundary
(
    atmosphere
    {
        type patch;
        faces
        (
            (24 25 26 27)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (1 2 6 5)
            (5 6 10 9)
            (9 10 14 13)
            (13 14 18 17)
            (17 18 22 21)
            (21 22 26 25)
        );
    }
    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
            (4 8 11 7)
            (8 12 15 11)
            (12 16 19 15)
            (16 20 23 19)
            (20 24 27 23)
        );
    }
    bottom
    {
        type symmetryPlane;
        faces
        (
            (0 3 2 1)
        );
    }
    side1
    {
        type symmetryPlane;
        faces
        (
            (0 1 5 4)
            (4 5 9 8)
            (8 9 13 12)
            (12 13 17 16)
            (16 17 21 20)
            (20 21 25 24)
        );
    }
    side2
    {
        type symmetryPlane;
        faces
        (
            (3 7 6 2)
            (7 11 10 6)
            (11 15 14 10)
            (15 19 18 14)
            (19 23 22 18)
            (23 27 26 22)
        );
    }
);

mergePatchPairs
(
);

