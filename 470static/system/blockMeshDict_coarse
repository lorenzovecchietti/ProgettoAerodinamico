FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

xmin 	-10;
xmax	15;
ymin	-10;
ymax	10;
zmin	-20;
zmax	5;


vertices
(
    	($xmin $ymin $zmin)
	($xmax $ymin $zmin)
	($xmax $ymax $zmin)
	($xmin $ymax $zmin)

	($xmin $ymin $zmax)
	($xmax $ymin $zmax)
	($xmax $ymax $zmax)
	($xmin $ymax $zmax)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (25 20 160) 		
    simpleGrading (
    		1	// x-direction
    		1	// y-direction
    		(
    			(0.78	0.4	0.01)
    			(0.04	0.43	1)
    			(0.18	0.17	50)
    		)	//z-direction
    		)
);

edges
(
);

boundary
(

    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (2 6 5 1)
        );
    }
    atmosphere
    {
        type patch;
        faces
        (
            (4 5 6 7)
        );
    }
    bottom
    {
        type symmetryPlane;
        faces
        (
            (0 3 2 1)
        );
    }
    side1
    {
        type symmetryPlane;
        faces
        (
            (3 7 6 2)
        );
    }
    side2
    {
        type symmetryPlane;
        faces
        (
            (1 5 4 0)
        );
    }
);

