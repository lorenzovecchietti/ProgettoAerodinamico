FoamFile
{
    version     2.0;
    format      binary;
    class       pointScalarField;
    arch        "LSB;label=32;scalar=64";
    location    "0";
    object      normalDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];


internalField   uniform 0;

boundaryField
{
    frontAndBack
    {
        type            calculated;
    }
    inlet
    {
        type            calculated;
    }
    outlet
    {
        type            calculated;
    }
    lowerWall
    {
        type            calculated;
    }
    upperWall
    {
        type            calculated;
    }
    hull
    {
        type            calculated;
    }
    keel
    {
        type            calculated;
    }
    procBoundary1to0
    {
        type            processor;
    }
    procBoundary1to2
    {
        type            processor;
    }
}


