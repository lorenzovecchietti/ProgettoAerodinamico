FoamFile
{
    version     2.0;
    format      binary;
    class       volVectorField;
    arch        "LSB;label=32;scalar=64";
    location    "0";
    object      Ua;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];


internalField   uniform (0 0 0);

boundaryField
{
    frontAndBack
    {
        type            adjointFarFieldVelocity;
        value           uniform (0 0 0);
    }
    inlet
    {
        type            adjointInletVelocity;
        value           nonuniform List<vector> 0;
    }
    outlet
    {
        type            adjointOutletVelocity;
        inletValue      uniform ( 0 0 0 );
        value           nonuniform List<vector> 0;
    }
    lowerWall
    {
        type            adjointFarFieldVelocity;
        value           uniform (0 0 0);
    }
    upperWall
    {
        type            adjointFarFieldVelocity;
        value           uniform (0 0 0);
    }
    hull
    {
        type            adjointWallVelocity;
        value           uniform (0 0 0);
    }
    keel
    {
        type            adjointWallVelocity;
        value           nonuniform List<vector> 0;
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform (0 0 0);
    }
    procBoundary1to2
    {
        type            processor;
        value           uniform (0 0 0);
    }
}


// ************************************************************************* //
