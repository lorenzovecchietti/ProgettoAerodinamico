FoamFile
{
    version     2.0;
    format      binary;
    class       volVectorField;
    arch        "LSB;label=32;scalar=64";
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];


internalField   uniform (3.5 0 0);

boundaryField
{
    frontAndBack
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (3.5 0 0);
    }
    inlet
    {
        type            fixedValue;
        value           nonuniform List<vector> 0;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      nonuniform List<vector> 0;
        value           nonuniform List<vector> 0;
    }
    lowerWall
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (3.5 0 0);
    }
    upperWall
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (3.5 0 0);
    }
    hull
    {
        type            noSlip;
    }
    keel
    {
        type            noSlip;
    }
    procBoundary2to1
    {
        type            processor;
        value           uniform (3.5 0 0);
    }
    procBoundary2to3
    {
        type            processor;
        value           uniform (3.5 0 0);
    }
}


// ************************************************************************* //
